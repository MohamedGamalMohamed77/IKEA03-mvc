@model DepartmentEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center align-items-center flx-column"></div>

<h1 class="col-6 my-4" >Edit Department</h1>

<form asp-action="Edit" class="col-8">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="offset-3 form-group mb-3">
        <label class="form-label" asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="offset-3 form-group mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="offset-3 form-group mb-3">
        <label class="form-label" asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"> </textarea>
    </div>
    <div class="offset-3 form-group mb-3">
        <label class="form-label" asp-for="CreationDate"></label>
        <input type="Date" asp-for="CreationDate" class="form-control" />
    </div>
    <div class="mt-4">
        <input type="submit" value="save" class="btn btn-success"/>
        <a asp-action="Index" class="btn btn-light">Cancel</a>

    </div>
</form>

