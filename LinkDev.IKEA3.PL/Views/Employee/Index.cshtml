@model IEnumerable<EmployeeDto>

@{
	ViewData["Title"] = "Index";
}

<br/>
<br/>
   <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>
<br/>

<h1>Index</h1>

@if (Model.Count() > 0)
{
			 <table class="table table-striped table-hover mt-4">
			 <thead class="text-center">
				 <tr>
					<th>@Html.DisplayNameFor(D => D.Name)</th>
					<th>@Html.DisplayNameFor(D => D.Age)</th>
					<th>@Html.DisplayNameFor(D => D.Salary)</th>
					<th>@Html.DisplayNameFor(D => D.Gender)</th>
					<th>@Html.DisplayNameFor(D => D.EmployeeType)</th>
				    <th>@Html.DisplayNameFor(D => D.Email)</th>
					<th>@Html.DisplayNameFor(D => D.IsActive)</th>
					<th>Details</th>
					<th>Update</th>
					<th>Delete</th>
				 </tr>
			 </thead>
			 <tbody class="text-center">
			@foreach (var employee in Model)
			{
							 <tr>
								 <td>@employee.Name</td>
								 <td>@employee.Age</td>
								 <td>@employee.Salary</td>
								 <td>@employee.Gender</td>
								 <td>@employee.EmployeeType</td>
							     <td>@employee.Email</td>
								 <td>@employee.IsActive</td>
								 <td>
							 <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-warning" >
									<i class="fas fa-eye "></i> Details
									 </a>
								 </td> 
								 <td>
							 <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-success" >
									<i class="fas fa-edit "></i> Update
									 </a>
								 </td>
								 <td>

						@*<a asp-controller="Employee" asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger" >
                               <i class="fas fa-trash"></i> Delete
                            </a>*@
								   <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal"> 
									   <i class="fas fa-trash"></i> Delete
									   </button>
								</td>

							 </tr>   
									 <!-- Modal -->
		<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
		  <div class="modal-dialog">
			<div class="modal-content">
			  <div class="modal-header">
						<h1 class="modal-title fs-5" id="exampleModalLabel">Delete Employee</h1>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			  </div>
			  <div class="modal-body">
						Are you sure to delete this employee?
			  </div>
			  <div class="modal-footer">
						 <form asp-action="Delete" asp-route-id="@employee.Id" method="post">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
				<button type="submit" class="btn btn-danger">Delete</button>
			  </form>
			  
		  </div>
			</div>
		  </div>
		</div>

			}
				</tbody>

			 </table>
}

else
{
		<div class="alert alert-info mt-3">

		</div>
}