@model UpdatedEmployeeDto

@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center align-items-center flx-column"></div>

<h1 class="col-6 my-4" >Create New Employee</h1>

<form asp-action="Edit" class=" col-8">
    <div asp-validation-summary="ModelOnly"></div>


    <div class="offset-3 form-group mb-3 col-6 ">
        <label class="form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control"  />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="offset-3 form-group mb-3 col-6 ">
        <label class="form-label " asp-for="Age" ></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="offset-3 form-group mb-3 col-6 ">
        <label class="form-label" asp-for="Salary"></label>
         <input  asp-for="Salary" class="form-control" />
    </div>
    <div class="offset-3 form-group mb-3 col-6 ">
        <label class="form-label" asp-for="Address"></label>
        <input  asp-for="Address" class="form-control" />
    </div>
    <div class="offset-3 form-group mb-3 col-6 ">
        <label class="form-label" asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="offset-3 form-group mb-3 col-6 ">
        <label class="form-label" asp-for="HiringDate"></label>
        <input type="Date" asp-for="HiringDate" class="form-control" />
    </div>

    <div class="offset-3 form-group mb-3 col-6 ">
        <label class="form-label" asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div> 
    <div class="offset-3 form-check mb-3 col-6 ">
          <input class="form-check-input" asp-for="IsActive" type="checkbox" />
      <label class="form-check-label" asp-for="IsActive" ></label>
    </div>
    <div class="offset-3 form-check mb-3 col-6 ">
       <label asp-for="Gender" class="form-label" ></label>
        <select asp-for="Gender"  asp-items="Html.GetEnumSelectList<Gender>()" class="form-label">
            <option value="">Select Employee Type</option>
        </select>
    </div>

    <div class="offset-3 form-group mb-3 col-6 ">
        <label asp-for="EmployeeType" class="form-label" ></label>
        <select asp-for="EmployeeType"  asp-items="Html.GetEnumSelectList<EmpType>()" class="form-label">
            <option value="">Select Employee Type</option>
        </select>
    </div>




    <div class="mt-4">
        <input type="submit" value="Save" class="btn btn-success"/>
        <a asp-action="Index" class="btn btn-light">Cancel</a>

    </div>
</form>


@section ValidationScripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}