@model EmployeeDetailsDto

@{
    ViewData["Title"] = "Delete";
}

<h1>Are You Sure to Delete tis Department ? </h1>

<ul class="nav nav-tabs" id="departmentTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>

    <li class="nav-item" role="presentation">
        <a class="nav-link" id="adminstration-tab" data-bs-toggle="tab" href="#adminstration" role="tab" aria-controls="adminstration" aria-selected="false">Adminstration</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <!-- General Tab Content -->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
        <div class="row">
             <div class="offset-3 form-group mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div> 

    <div class="offset-3 form-group mb-3">
        <label class="form-label" asp-for="Age"></label>
        <input asp-for="Age" class="form-control" readonly/>
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="offset-3 form-group mb-3">
        <label class="form-label" asp-for="Salary"></label>
         <input type="Date" asp-for="Salary" class="form-control" readonly />
        <textarea asp-for="Salary" class="form-control"> </textarea>
    </div>
    <div class="offset-3 form-group mb-3">
        <label class="form-label" asp-for="Address"></label>
        <input type="Date" asp-for="Address" class="form-control" readonly />
    </div>
    <div class="offset-3 form-group mb-3">
        <label class="form-label" asp-for="Email"></label>
        <input type="Date" asp-for="Email" class="form-control" readonly />
    </div>

    <div class="offset-3 form-check mb-3">
        <label class="form-check-label" asp-for="IsActive"></label>
        <input  asp-for="IsActive" class="form-check-input" readonly/>
    </div>

    <div class="offset-3 form-group mb-3">
        <label class="form-label" asp-for="HiringDate"></label>
        <input type="Date" asp-for="HiringDate" class="form-control" readonly />
    </div>

    <div class="offset-3 form-group mb-3">
        <label class="form-label" asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" readonly/>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="offset-3 form-check mb-3">
        <label class="form-check-label" asp-for="Gender"></label>
        <input asp-for="Gender" class="form-check-input" readonly/>
    </div>
    <div class="offset-3 form-check mb-3">
        <label class="form-check-label" asp-for="EmployeeType"></label>
        <input asp-for="EmployeeType" class="form-check-input" readonly/>
    </div>
        </div>

    </div>

    <!-- Adminstration Tab Content -->
    <div class="tab-pane fade p-4 border" id="adminstration" role="tabpanel" aria-labelledby="adminstration-tab">

        <div class="form-group col-6">
            <label class="col-form-label" asp-for="CreatedBy"></label>
            <input asp-for="CreatedBy" class="form-control" readonly />
        </div>

        <div class="form-group col-6">
            <label class="col-form-label" asp-for="CreatedOn"></label>
            <input asp-for="CreatedOn" class="form-control" readonly />
        </div>

        <div class="form-group col-6">
            <label class="col-form-label" asp-for="LastModifiedBy"></label>
            <input asp-for="LastModifiedBy" class="form-control" readonly />
        </div>

        <div class="form-group col-6">
            <label class="col-form-label" asp-for="LastModifiedOn"></label>
            <input asp-for="LastModifiedOn" class="form-control" readonly />
        </div>

    </div>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="Post" class="mt-4">

       <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

</div>



