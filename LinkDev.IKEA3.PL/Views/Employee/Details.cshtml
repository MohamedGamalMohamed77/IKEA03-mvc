@model EmployeeDetailsDto


@{
    ViewData["Title"] = "Details";
}

<div class="row justify-content-center align-items-center flx-column"></div>


<h1>Employee Details</h1>
<br/>
<br/>


<!-- Bootstrap Tabs-->
<ul class="nav nav-tabs" id="employeeTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>

    <li class="nav-item" role="presentation">
        <a class="nav-link" id="adminstration-tab" data-bs-toggle="tab" href="#adminstration" role="tab" aria-controls="adminstration" aria-selected="false">Adminstration</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <!-- General Tab Content -->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
        <div class="row col-12">

           <div class="offset-3 form-group mb-3 col-6 ">
        <label class="form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly /> 
    </div>
    <div class="offset-3 form-group mb-3 col-6 ">
        <label class="form-label " asp-for="Age" ></label>
        <input asp-for="Age" class="form-control" readonly />
    </div>
    <div class="offset-3 form-group mb-3 col-6 ">
        <label class="form-label" asp-for="Salary"></label>
         <input  asp-for="Salary" class="form-control" readonly />
    </div>
    <div class="offset-3 form-group mb-3 col-6 ">
        <label class="form-label" asp-for="Address"></label>
        <input  asp-for="Address" class="form-control" readonly />
    </div>
    <div class="offset-3 form-group mb-3 col-6 ">
        <label class="form-label" asp-for="Email"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="offset-3 form-group mb-3 col-6 ">
        <label class="form-label" asp-for="HiringDate"></label>
        <input type="Date" asp-for="HiringDate" class="form-control" readonly />
    </div>

    <div class="offset-3 form-group mb-3 col-6 ">
        <label class="form-label" asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" readonly />
    </div> 
    <div class="offset-3 form-check mb-3 col-6 ">
        <label class="form-check-label" asp-for="IsActive"></label>
        <input  asp-for="IsActive" class="form-check-input" disabled />
    </div>
     <div class="offset-3 form-check mb-3 col-6 ">
       <label asp-for="Gender" class="form-label" ></label>
        <select asp-for="Gender" disabled asp-items="Html.GetEnumSelectList<Gender>()" class="form-label">
            <option value="">Select Employee Type</option>
        </select>
    </div>

    <div class="offset-3 form-group mb-3 col-6  ">
        <label asp-for="EmployeeType" class="form-label" ></label>
        <select asp-for="EmployeeType" disabled asp-items="Html.GetEnumSelectList<EmpType>()" class="form-label">
            <option value="">Select Employee Type</option>
        </select>
    </div>
     <div class="offset-3 form-group mb-3 col-6 my-3">
        <label asp-for="Department" class="form-label" ></label>
        <input asp-for="Department" disabled class="form-label" />
            
    </div>

        </div>

    </div>

    <!-- Adminstration Tab Content -->
    <div class="tab-pane fade p-4 border" id="adminstration" role="tabpanel" aria-labelledby="adminstration-tab">

        <div class="form-group col-6">
            <label class="col-form-label" asp-for="CreatedBy"></label>
            <input asp-for="CreatedBy" class="form-control" readonly />
        </div>

        <div class="form-group col-6">
            <label class="col-form-label" asp-for="CreatedOn"></label>
            <input asp-for="CreatedOn" class="form-control" readonly />
        </div>

        <div class="form-group col-6">
            <label class="col-form-label" asp-for="LastModifiedBy"></label>
            <input asp-for="LastModifiedBy" class="form-control" readonly />
        </div>

        <div class="form-group col-6">
            <label class="col-form-label" asp-for="LastModifiedOn"></label>
            <input asp-for="LastModifiedOn" class="form-control" readonly />
        </div>

    </div>

    <div class="mt-4">

        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back To List</a>
    </div>

</div>

